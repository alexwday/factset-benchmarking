# FactSet API Configuration
API_USERNAME=your_factset_username
API_PASSWORD=your_factset_api_password

# Proxy Configuration (optional - leave blank if not using proxy)
PROXY_USER=your_proxy_username
PROXY_PASSWORD=your_proxy_password
PROXY_URL=oproxy.fg.rbc.com:8080
PROXY_DOMAIN=MAPLE

# SSL Certificate Path (optional - relative to project root)
SSL_CERT_PATH=certs/rbc-ca-bundle.cer

# Output Configuration (LOCAL paths - relative to project root)
# These are LOCAL directories where reports will be saved
OUTPUT_PATH=output
LOG_PATH=logs

